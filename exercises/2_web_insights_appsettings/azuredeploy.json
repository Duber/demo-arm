{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "your_name": {
      "minLength": 1,
      "type": "string"
    },
    "servicePlanName": {
      "minLength": 1,
      "type": "string",
      "defaultValue": "demoarm-<your_name>"
    }
  },
  "variables": {
    "site_name": "[concat('demoarm','-',parameters('your_name'))]",
    "slot_name": "deploy",
    "api_site_slot": "[concat(variables('site_name'),'/',variables('slot_name'))]",
    "servicePlanName": "[replace(parameters('servicePlanName'), '<your_name>', parameters('your_name'))]",
    "servicePlanId": "[concat(subscription().id,'/resourceGroups/',resourcegroup().id,'/providers/Microsoft.Web/serverfarms/', variables('servicePlanName'))]"
  },
  "resources": [
    {
      "name": "[variables('site_name')]",
      "type": "Microsoft.Insights/components",
      "kind": "web",
      "apiVersion": "2014-04-01",
      "location": "westeurope",
      "tags": {
      },
      "properties": {
        "ApplicationId": "[variables('site_name')]"
      },
      "dependsOn": []
    },
    {
      "name": "[variables('site_name')]",
      "type": "Microsoft.Web/sites",
      "kind": "app",
      "apiVersion": "2015-08-01",
      "location": "[resourceGroup().location]",
      "tags": {
      },
      "properties": {
        "name": "[variables('site_name')]",
        "serverFarmId": "[variables('servicePlanId')]",
        "siteConfig": {
          "alwaysOn": true,
          "appSettings": [
            {
              "name": "ApplicationInsights:InstrumentationKey",
              "value": "[reference(resourceId('Microsoft.Insights/components/', variables('site_name'))).InstrumentationKey]"
            }
          ],
          "cors": { "allowedOrigins": [ "*" ] }
        }
      },
      "resources": [
        {
          "apiVersion": "2015-08-01",
          "name": "[variables('slot_name')]",
          "type": "slots",
          "location": "[resourceGroup().location]",
          "dependsOn": [
            "[resourceId('Microsoft.Web/Sites/', variables('site_name'))]"
          ],
          "Properties": {
            "siteConfig": {
              "alwaysOn": true,
              "appSettings": [
                {
                  "name": "ApplicationInsights:InstrumentationKey",
                  "value": "[reference(resourceId('Microsoft.Insights/components/', variables('site_name'))).InstrumentationKey]"
                }
              ],
              "cors": { "allowedOrigins": [ "*" ] }
            }
          }
        }
      ],
      "dependsOn": [
        "[resourceId('Microsoft.Insights/components', variables('site_name'))]"
      ]
    }
  ]
}